      <div class="alert alert-error">
        <%= alert %></div>
  <%- end %>
  <%= yield %>

</div>

</body>
<footer></footer>
<%= javascript_include_tag "bottom" %>

<script>
  $('#question_text').wysihtml5();
  $('#answer_text').wysihtml5();
</script>
<script>
  $(
    function createUploader(){
      var uploader = new qq.FileUploader({
        element: document.getElementById('file-uploader-demo1'),
        action: '/uploadimage',
        debug: true,
        onComplete: UploadSpace.complete
      });
  });

  var UploadSpace = {
    complete : function (id, fileName, responseJSON){
      $('.bootstrap-wysihtml5-insert-image-url').val(responseJSON.imagelocation);
    }
  }
</script>
</html>







