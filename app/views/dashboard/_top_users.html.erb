<section id="top-users">
  <h3>
    <i class="icon-user"></i> Top Users
  </h3>
  <ul>
    <% @top_users.each do |user| %>
        <li>
          <%= image_tag user.avatar.small_thumb.url, :alt => '' %>
          <%= link_to "#{user.full_name} +[#{user.score}]", user_path(user) %>
        </li>
    <% end %>
  </ul>
</section>