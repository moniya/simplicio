<%= form_for(@question) do |f| %>
    <% if @question.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@question.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% @question.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :text %>
      <%= f.text_area :text %>
    </div>
    <div class="field">
      <%= text_field_tag :tags, params[:tags], :placeholder => "Tags" %>
      <div>
        <em>Enter multiple tags separating each with a comma. [eg. math, ecnonomics, history]</em>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Submit", :type => 'submit', :class => "btn btn-info" %>

    </div>
<% end %>
