<%= form_for @user, url: {controller: "profiles", action: "update"}, html: {multipart: true} do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :avatar, text = "Profile picture" %>
      <br/>
      <%= f.file_field :avatar %>
    </div>
    <div class="field">
      <%= f.label :department %>
      <br/>
      <%= f.text_field :department %>
    </div>
    <div class="field">
      <%= f.label :school %>
      <br/>
      <%= f.text_field :school %>
    </div>
    <div class="field">
      <%= f.label :bio %>
      <br/>
      <%= f.text_area :bio %>
    </div>
    <div class="actions">
      <%= f.submit "Save", :class => "btn btn-info" %>
    </div>
<% end %>
